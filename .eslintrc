{
    "root":true,
    "extends": "airbnb-base",
    "env":{
      "node":true,
      "es6": true,
      "mocha":true,
    },
    "parserOptions": {
        "esversion": 8,
        "ecmaVersion":8
    },
    "rules":{
        "semi":"error",
        "import/no-unresolved": [
            2,
            {
                "commonjs": true
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "class-methods-use-this": 0,
        "camelcase": 0,
        "no-shadow": [
            "error",
            {
                "allow": [
                    "req",
                    "res",
                    "err"
                ]
            }
        ],
        "import/no-named-as-default": 0,
        "consistent-return": 0,
        "import/prefer-default-export":0
    }
}